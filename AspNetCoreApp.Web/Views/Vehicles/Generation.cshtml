@model AspNetCoreApp.Web.Models.Generation
@{
    ViewData["Title"] = Model.Name.Text + " Detayları";
}

<div class="container">
    <h1 class="text-center mb-5">@Model.Name.Text Detayları</h1>
    
    <div class="row">
        <div class="col-md-6">
            @if (Model.Images.Image.Any())
            {
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Model.Images.Image.Count; i++)
                        {
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                        }
                    </div>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Images.Image.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.Images.Image[i].Big.Text" class="d-block w-100" alt="@Model.Name.Text">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            }
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Teknik Özellikler</h5>
                    @if (Model.Modifications.Modification.Any())
                    {
                        var mod = Model.Modifications.Modification.First();
                        <ul class="list-unstyled">
                            <li><strong>Motor Hacmi:</strong> @mod.EngineDisplacement.Text cc</li>
                            <li><strong>Güç:</strong> @mod.PowerHp.Text HP</li>
                            <li><strong>Tork:</strong> @mod.TorqueNm.Text Nm</li>
                            <li><strong>Yakıt Sistemi:</strong> @mod.FuelSystem.Text</li>
                            <li><strong>Motor Tipi:</strong> @mod.Turbine.Text</li>
                     
                            <li><strong>Uzunluk:</strong> @mod.Length.Text mm</li>
                            <li><strong>Genişlik:</strong> @mod.Width.Text mm</li>
                            <li><strong>Yükseklik:</strong> @mod.Height.Text mm</li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 